@model Talor_music.Models.PlayListSong

@{
    ViewData["Title"] = "Details";
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<h1>Details</h1>

<div>
    <h4>PlayListSong</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAdded)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="AddSongToListAction" method="get">
        <input type="hidden" name="playListId" value="@Model.PlaylistSongID" />
        <select name="songId" class="select2">
            @if(ViewBag.Songs != null)
            {
                foreach(var song in ViewBag.Songs)
                {
                    <option value="@song.SongID">@song.Title</option>
                }
            }
        </select>
        <button type="submit" class="btn btn-sm btn-primary">Add Song</button>
    </form>
</div>

<div class="mt-4">
    <h4>Songs in this playlist</h4>

    @if (Model.Songs != null && Model.Songs.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Genre</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.Songs)
                {
                    <tr>
                        <td>@s.Title</td>
                        <td>@(s.Artist != null ? s.Artist.Name : "")</td>
                        <td>@s.Genre</td>
                        <td>@String.Format("{0:C}", s.Price)</td>
                        <td>
                            <a asp-controller="Songs" asp-action="Details" asp-route-id="@s.SongID">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p><em>No songs in this playlist.</em></p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.PlaylistSongID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
